{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
      "types": [
     "@cloudflare/workers-types", "@types/node"
    ],
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "cloudflare:*": ["node_modules/@cloudflare/workers-types/*"]
    }
  },
  "include": [
    "src/**/*",
   "worker-configuration.d.ts",
   "types/**/*",
   "env.d.ts"  ],
  "exclude": ["node_modules", ".next", "dist"]
}